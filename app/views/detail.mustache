{{<layout}}
    {{$pageTitle}}{{#__}}detail.pageTitle{{/__}}{{/pageTitle}}
    {{$applicationContent}}
        {{#resource}}
          <header class="page-header">
              <h1 class="heading-large">
                  <span class="heading-secondary">
                        <a href="{{ basePath }}/search?search={{ category.0 }}"
                           data-test="category">{{ category.0 }}</a>
                  </span>
                        <div data-test="header">{{ title }}</div>
              </h1>
          </header>
          <p class="lede text" data-test="summary">{{ summary }}</p>
          <a href="{{ url }}" class="button button-get-started" data-test="link" target="_blank">
            {{#__}}detail.linkText{{/__}}</a>
          <h2 class="heading-medium text">{{#__}}detail.howToUseIt.header{{/__}}</h2>
          <p class="text">{{#__}}detail.howToUseIt.description{{/__}}:</p>
          <div class="grid-row">
            <div class="column-two-thirds">
              <div class="copy-journal-message">
                <pre data-test="journal-message">{{ journalMessage }}</pre>
                <div class="toggle-switch" data-test="copy-journal-message-switch">
                  <p>
                    <a class="copy-clipboard-link toggler" href="#copy-clipboard"
                       data-clipboard-text="{{ journalMessage }}"
                       data-test="copy-clipboard-journal-link">
                      <span class="toggle-off-text">{{#__}}detail.copyJournalMessage{{/__}}</span>
                      <span class="toggle-on-text">{{#__}}detail.copyJournalMessageRepeat{{/__}}</span>
                    </a>
                  </p>
                  <div class="panel panel-border-wide alert">
                    <p>{{#__}}detail.copyAlertMessage{{/__}}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <h2 class="heading-medium text">{{#__}}detail.relatedCategories.header{{/__}}</h2>
          <p><a href="{{ basePath }}/search?search={{ categoryEncoded }}" data-test="category-link">{{ category }}</a></p>

        {{/resource}}
    {{/applicationContent}}
{{/layout}}
