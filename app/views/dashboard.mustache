{{<layout}}
  {{$pageTitle}}{{#__}}dashboard.pageTitle{{/__}}{{/pageTitle}}
  {{$applicationContent}}
    <h2 class="heading-xlarge" data-test="header">{{#__}}dashboard.header{{/__}}</h2>

    <a href="{{basePath}}/search" class="button">Search</a> <!--temporary link-->

    <h4>{{#__}}dashboard.categories.heading{{/__}}</h4>
    {{#categoryList}}
        <div data-test="category">
            <a href="{{ basePath }}/search?search={{ uriEncodedTitle }}" data-test="category-link">
                {{ title }}</a>
            <p data-test="category-summary">{{ summary }}</p>
        </div>
    {{/categoryList}}

    <h4>{{#__}}dashboard.featured.heading{{/__}}</h4>
    <a href="{{#__}}dashboard.featured.resourceLink{{/__}}">
        {{#__}}dashboard.featured.resourceLinkText{{/__}}</a>
    <p>{{#__}}dashboard.featured.resourceSummary{{/__}}</p>

    <h4>{{#__}}dashboard.edit.heading{{/__}}</h4>
    <a href="{{#__}}dashboard.edit.mailto{{/__}}">{{#__}}dashboard.edit.text{{/__}}</a>
  {{/applicationContent}}

{{/layout}}
