{{<layout}}
  {{$pageTitle}}{{#__}}dashboard.pageTitle{{/__}}{{/pageTitle}}
  {{$applicationContent}}
    <h1 class="heading-xlarge" data-test="header">{{#__}}dashboard.header{{/__}}</h1>
    <p class="lede">{{#__}}dashboard.summary{{/__}}</p>

    <form action="{{ basePath }}/search" method="GET" id="search-form">
      <div class="form-group">
        <input type="search" name="search" id="search" class="form-control" value=""
               data-test="search-input">
        <input type="submit" class="button" value="Search" data-test="search-button">
      </div>
    </form>

    <h2 class="heading-small">{{#__}}dashboard.categories.heading{{/__}}</h2>
    <div class="categories-list">
      <div class="grid-row">

        {{#categoryListRow1}}
          <div class="column-one-third" data-test="category">
            <h3 class="heading-medium">
              <a href="{{ basePath }}/search?search={{ uriEncodedTitle }}" data-test="category-link">
                {{ title }}</a>
            </h3>
            <p data-test="category-summary">{{ summary }}</p>
          </div>
        {{/categoryListRow1}}

      </div>
      <div class="grid-row">

      {{#categoryListRow2}}
        <div class="column-one-third" data-test="category">
          <h3 class="heading-medium">
            <a href="{{ basePath }}/search?search={{ uriEncodedTitle }}" data-test="category-link">
              {{ title }}</a>
          </h3>
          <p data-test="category-summary">{{ summary }}</p>
        </div>
      {{/categoryListRow2}}

      </div>
    </div>

    <h2 class="heading-small">{{#__}}dashboard.featured.heading{{/__}}</h2>

    <div class="feature-section">
      <div class="thumbnail">
        <a href="{{ basePath }}/resources/{{#__}}dashboard.featured.resourceId{{/__}}">
          <img src="{{ basePath }}/images/screens/{{#__}}dashboard.featured.resourceId{{/__}}-small.png">
        </a>
      </div>

      <div class="details">
        <h3>
          <a href="{{ basePath }}/resources/{{#__}}dashboard.featured.resourceId{{/__}}"
             data-test="featured-resource-link">{{#__}}dashboard.featured.resourceLinkText{{/__}}</a>
        </h3>
        <p>{{#__}}dashboard.featured.resourceSummary{{/__}}</p>
      </div>
    </div>

    <h2 class="heading-small">{{#__}}dashboard.edit.heading{{/__}}</h2>
    <a href="{{#__}}dashboard.edit.mailto{{/__}}">{{#__}}dashboard.edit.text{{/__}}</a>
  {{/applicationContent}}

{{/layout}}
